<link rel="stylesheet" href="/stylesheet/panier.css" />
<div>
  <h1>Panier</h1>

  <table id="panier">
    <thead>
      <tr>
        <th>NOM DU PRODUIT</th>
        <th>PRIX KG</th>
        <th>NOMBRE DE COLIS</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        <tr class="product">
        <td class="nomProduit"><span></span>{{nom}}</td>
        <td class="prix"><span>{{prix}}</span>€</td>
